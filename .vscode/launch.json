  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Comms Chrome",
      "url": "http://localhost:9001",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}\\utilities\\copy-package-json.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Clean Util",
      "program": "${workspaceFolder}\\utilities\\clean.js",
      "args": ["."],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
